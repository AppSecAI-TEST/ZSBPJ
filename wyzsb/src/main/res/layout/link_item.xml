<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_all"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_item_clicked"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/giv_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/giv_image"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:paddingBottom="6dp"
            android:text=""
            android:textColor="@color/assist_blue"
            android:textSize="14sp"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/giv_image"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@id/giv_image"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lcc"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/setting_act_viewline_common" />
</LinearLayout>