<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_all"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_item_clicked"
        android:padding="10dp">

        <ImageView
            android:id="@+id/giv_image"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/giv_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/giv_image"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:paddingBottom="6dp"
            android:text="标题"
            android:textColor="@color/font_black_0"
            android:textSize="15sp"/>
        <TextView
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:layout_toRightOf="@id/giv_image"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_title"
            android:id="@+id/tv_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="撒旦撒旦撒旦说的说的说的"
            android:textColor="@color/font_black_5"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_toRightOf="@id/giv_image"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/giv_image"
            android:layout_below="@+id/tv_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="渗透"
                android:textColor="@color/font_black_5"
                android:textSize="12sp"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_fenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98分"
                android:textColor="@color/font_black_5"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/setting_act_viewline_common" />
</LinearLayout>