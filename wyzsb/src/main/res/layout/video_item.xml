<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_page"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/homenormal" />

    <LinearLayout
        android:id="@+id/lv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="记录渗透某学院的的过程"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="渗透"
                android:textColor="@color/main_textcolor"
                android:textSize="14sp" />


            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/viewcolor" />

            <TextView
                android:id="@+id/personnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="初级"
                android:textColor="@color/main_textcolor"
                android:textSize="14sp" />

            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/viewcolor" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="白帽子"
                android:textColor="@color/main_textcolor"
                android:textSize="14sp" />

            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@color/viewcolor" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/video_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/post_img_count_bg"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="3:67"
                android:textColor="@color/bg_White"
                android:textSize="9dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

