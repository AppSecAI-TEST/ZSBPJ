<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:background="#ffffff"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dark_list_item"
            android:orientation="vertical">

            <ImageView
                android:visibility="gone"
                android:id="@+id/tv_comment_count"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/setting_bg" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="标题"
                android:textColor="#535353"
                android:textSize="@dimen/item_title" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="@dimen/standard_alpha"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:padding="5dp"
                android:text=""
                android:textColor="#999"
                android:textSize="@dimen/item_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:alpha="@dimen/secondary_alpha"
                    android:text="lcc"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/item_content" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/tv_author"
                    android:layout_toRightOf="@id/tv_author"
                    android:alpha="@dimen/secondary_alpha"
                    android:drawableLeft="@drawable/icon_clock_mini_not"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/icon_clock_mini_not"
                    android:text="4月11日"
                    android:textColor="#83898C"
                    android:textSize="@dimen/item_time" />


                <!--<TextView-->
                <!--android:id="@+id/tv_comment_count"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:textColor="#83898C"-->
                <!--android:textSize="@dimen/item_content"-->
                <!--android:drawableLeft="@drawable/icon_comment_mini_not"-->
                <!--android:drawableStart="@drawable/icon_comment_mini_not"-->
                <!--android:drawablePadding="5dp"-->
                <!--android:alpha="@dimen/secondary_alpha"-->
                <!--android:text="zero"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="wrap_content" />-->
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>



