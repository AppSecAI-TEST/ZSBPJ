<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_user_other"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:src="@color/font_black_4" />

        <TextView
            android:padding="15dp"
            android:textSize="14sp"
            android:background="@drawable/aliwx_comment_l_nested"
            android:text="你好，在么？请问你一般都是怎么化妆的啊请问你一般都是怎么化妆的啊请问你一般都是怎么化妆的啊请问你一般都是怎么化妆的啊请问你一般都是怎么化妆的啊请问你一般都是怎么化妆的啊请问你一般都是怎么化妆的啊？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:src="@color/font_black_4" />

        <TextView
            android:layout_alignTop="@+id/iv_me"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="15dp"
            android:layout_toLeftOf="@+id/iv_me"
            android:background="@drawable/aliwx_comment_r_nested"
            android:text="你好，在的，我一般就是每天早早的起来，然后去深山老林里面获取最好的山水，然后用来洗脸。其他的话就是很少的使用洗面奶等"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>