<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <ImageView
            android:padding="10dp"
            android:id="@+id/guillotine_hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_white_24dp" />
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:text="回答"
            android:layout_gravity="left"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_share_white_24px"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <com.lcc.view.MyScrollView
           android:id="@+id/nest"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:layout_behavior="@string/appbar_scrolling_view_behavior">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="?attr/colorPrimary">
                   <LinearLayout
                       android:layout_marginLeft="10dp"
                       android:layout_marginBottom="10dp"
                       android:layout_marginTop="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <ImageView
                           android:id="@+id/user_head"
                           android:layout_width="48dp"
                           android:layout_height="48dp"
                           android:fitsSystemWindows="true"
                           android:scaleType="centerCrop"
                           app:layout_collapseMode="parallax" />
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="梁铖城"
                               android:textColor="#fff" />
                           <TextView
                               android:layout_marginTop="5dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="虽然我走的很慢，但是我不会停"
                               android:textColor="#fff" />
                       </LinearLayout>
                   </LinearLayout>
                   <TextView
                       android:layout_marginBottom="10dp"
                       android:layout_marginLeft="10dp"
                       android:textColor="#fff"
                       android:id="@+id/tv_question"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginRight="10dp"
                       android:text="接口手机多亏了撒娇的绿卡聚少离多可骄傲了可适当加拉斯"
                       />
               </LinearLayout>

               <WebView
                   android:id="@+id/webView"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />
           </LinearLayout>

       </com.lcc.view.MyScrollView>
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom"
           android:background="#fff">
          <TextView
              android:background="#eeeeee"
              android:layout_width="match_parent"
              android:layout_height="1dp" />
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"></LinearLayout>
               <LinearLayout
                   android:layout_marginLeft="10dp"
                   android:gravity="center"
                   android:layout_marginBottom="5dp"
                   android:layout_marginTop="5dp"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:background="@drawable/ic_favorite_black_18dp"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:text="点赞"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <LinearLayout
                   android:layout_marginLeft="10dp"
                   android:gravity="center"
                   android:layout_marginBottom="5dp"
                   android:layout_marginTop="5dp"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:background="@drawable/ic_favorite_black_18dp"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:text="收藏"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/ll_comments"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:gravity="center"
                   android:layout_marginBottom="5dp"
                   android:layout_marginTop="5dp"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:background="@drawable/ic_favorite_black_18dp"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:text="评论"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
   </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:src="@drawable/ic_arrow_upward_white_24px"
        app:backgroundTint="@color/colorAccent"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_behavior="com.lcc.view.ScrollAwareFABBehavior"
        app:pressedTranslationZ="12dp"
        app:rippleColor="#33728dff" />
</LinearLayout>
