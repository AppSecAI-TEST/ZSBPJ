<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="喜旺玉米肠"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="14dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#eee" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择数量:" />

            <view.lcc.tyzs.view.NumEditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/net_dialog_count"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_product_num_des"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:src="@drawable/edit_product_num_des_selector" />

                <EditText
                    android:textColor="#000"
                    android:id="@+id/et_product_num"
                    android:layout_width="60dip"
                    android:layout_height="30dp"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:background="@drawable/edit_text_focused"
                    android:text="8" />

                <ImageView
                    android:id="@+id/iv_product_num_add"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:src="@drawable/edit_product_num_add_selector" />

            </view.lcc.tyzs.view.NumEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品价格:" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_dialog_cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥111"
                android:textColor="@color/red"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dip"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消"
                android:textColor="#FFF" />

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="10dp"
                android:text="确定"
                android:textColor="#FFF" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>